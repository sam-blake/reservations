<div class="btn-toolbar">
  <div class="btn-group">
    <% if can? :manage, Reservation %>
      <%= link_to "Today (#{@reservations_time.upcoming.size})", 
        reservations_path, class: @filter == :upcoming ? 'btn disabled' : 'btn' %>
    <% end %>
      <%= link_to "Reserved (#{@reservations_time.reserved.size})", 
        reservations_path(:reserved => true),
			  class: @filter == :reserved ? 'btn disabled' : 'btn' %>
      <%= link_to "Requested (#{@reservations_time.requested.size})",
        reservations_path(:requested => true),
        class: @filter == :requested ? 'btn disabled' : 'btn' %>
      <%= link_to "Checked out (#{@reservations_time.checked_out.size})",
        reservations_path(:checked_out => true),
			class: @filter == :checked_out ? 'btn disabled' : 'btn' %>
    <%= link_to "Overdue (#{@reservations_time.overdue.size})",
      reservations_path(:overdue => true),
			class: @filter == :overdue ? 'btn disabled' : 'btn' %>
    <% unless AppConfig.first.res_exp_time %>
      <%= link_to "Missed (#{@reservations_time.missed.size})",
        reservations_path(:missed => true),
        class: @filter == :missed ? 'btn disabled' : 'btn' %>
    <% end %>
    <%= link_to "Returned (#{@reservations_time.returned.size})",
      reservations_path(:returned => true),
			class: @filter == :returned ? 'btn disabled' : 'btn' %>
    <%= link_to "Approved (#{@reservations_time.approved_requests.size})",
      reservations_path(:approved_requests => true),
        class: @filter == :approved_requests ? 'btn disabled' : 'btn' %>
    <%= link_to "Denied (#{@reservations_time.denied_requests.size})",
      reservations_path(denied_requests: true),
      class: @filter == :denied_requests ? 'btn disabled' : 'btn' %>
  </div>
</div>
